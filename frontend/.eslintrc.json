{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "globals": {
        "process": "readonly",
        "global": "readonly",
        "vi": "readonly"
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "off",
        "react/prop-types": "off",
        "react/display-name": "off",
        "react/react-in-jsx-scope": "off",
        "import/prefer-default-export": "off",
        "no-console": "off",
        "react/jsx-props-no-spreading": "off"
    },
    "overrides": [
        {
            "files": [
                "tests/**/*.{js,jsx}"
            ],
            "globals": {
                "describe": "readonly",
                "it": "readonly",
                "expect": "readonly",
                "beforeEach": "readonly",
                "afterEach": "readonly",
                "test": "readonly",
                "afterAll": "readonly",
                "beforeAll": "readonly",
                "vi": "readonly"
            }
        }
    ]
}